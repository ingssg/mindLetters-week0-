# ì†”íŠ¸ ìƒì„±
def generate_salt():
    return os.urandom(16).hex()


# ë¹„ë°€ë²ˆí˜¸ ì†”íŒ…, í‚¤ ìŠ¤íŠ¸ë ˆì¹­
def hash_password(password, salt):
    hashed_password = password
    for _ in range(1328):  # ë°˜ë³µ íšŸìˆ˜ 1000~10000 ì‚¬ì´ ê°’ (ì„œë²„ ê³¼ë¶€í•˜ ë°©ì§€ ë° ë³´ì•ˆ ê³ ë ¤)
        hashed_password = hashlib.sha256((hashed_password + salt).encode()).hexdigest()
    return hashed_password


@users_blueprint.route("/signin")
def signin():
    return render_template('signin.html')


@users_blueprint.route("/signin", methods=["POST"])
def signin_user():
    # ë¡œê·¸ì¸ ê¸°ëŠ¥ êµ¬í˜„
    user = {
        'id': request.form.get('id', ''),
        'password': request.form.get('password', ''),
    }

    # ë¹ˆ ì¸í’‹ ì²´í¬
    if not user['id'] or not user['password']:
        return render_template('signin.html', error="ëª¨ë“  í•„ë“œë¥¼ ì…ë ¥í•´ì£¼ì„¸ìš”.")

    user_info = users_collection.find_one({"id": user['id']})

    if not user_info:
        return render_template('signin.html', error="ì¡´ì¬í•˜ì§€ ì•ŠëŠ” ì•„ì´ë””ì…ë‹ˆë‹¤.")

    if(hash_password(user['password'], user_info['salt']) != user_info['hashed_password']):

    if hash_password(user['password'], user_info['salt']) != user_info['hashed_password']:
        return render_template('signin.html', error="ë¹„ë°€ë²ˆí˜¸ê°€ ì¼ì¹˜í•˜ì§€ ì•ŠìŠµë‹ˆë‹¤.")

    # https://flask-jwt-extended.readthedocs.io/en/3.0.0_release/tokens_in_cookies/
    # JWT í† í° ìƒì„±
    resp = jsonify({'login': True})
    access_token = create_access_token({'_id': str(user_info['_id'])}, expires_delta=timedelta(minutes=120))
    set_access_cookies(resp, access_token)

    # jwt_token = generate_jwt_token(user_info['_id'])

    return resp, 200

@users_blueprint.route("/signup")
def signup():
    return render_template('signup.html')


@users_blueprint.route("/signup", methods=["POST"])
def create_user():
    # íšŒì› ê°€ì… ê¸°ëŠ¥ êµ¬í˜„
    isSignUp = False
    salt = generate_salt()

    user = {
        'id': request.form.get('id', ''),
        'hashed_password': '',
        'nickname': request.form.get('nickname', ''),
        'salt': salt,
        'createdAt': datetime.now(),
    }

    # íšŒì› ê°€ì… ë¡œì§
    # ë¹ˆ ì¸í’‹ ì²´í¬
    if not user['id'] or not request.form.get('password', '') or not request.form.get('password-confirm', '') or not \
            user['nickname']:
        return render_template('signup.html', error="ëª¨ë“  í•„ë“œë¥¼ ì…ë ¥í•´ì£¼ì„¸ìš”.")

    # ë¹„ë°€ë²ˆí˜¸ ê¸¸ì´ í™•ì¸
    if len(request.form['password']) < 8:
        return render_template('signup.html', error="ë¹„ë°€ë²ˆí˜¸ëŠ” ìµœì†Œ 8ì ì´ìƒì´ì–´ì•¼ í•©ë‹ˆë‹¤.")

    # ë¹„ë°€ë²ˆí˜¸ & ë¹„ë°€ë²ˆí˜¸ í™•ì¸ ì¼ì¹˜ ì—¬ë¶€ í™•ì¸
    if request.form['password'] != request.form['password-confirm']:
        return render_template('signup.html', error="ë¹„ë°€ë²ˆí˜¸ì™€ ë¹„ë°€ë²ˆí˜¸ í™•ì¸ì´ ì¼ì¹˜í•˜ì§€ ì•ŠìŠµë‹ˆë‹¤.")

    user['hashed_password'] = hash_password(request.form['password'], salt)

    isSignUp = True
    print(user)
    # DBì— ìœ ì € ì •ë³´ ì¶”ê°€
    users_collection.insert_one(user)

    return render_template('signin.html', isSignUp=isSignUp)



